<% layout('layouts/boilerplate3')%>

<div id="map" style="width:100%; height: 500px; margin-top: 1.5em; margin-bottom: 3em;"></div>

<div>
    <a class="btn btn-dark" href="/icecreams/new">Add Icecream-Store</a>
</div>
<br>

<h1 class="text-light">All Stores</h1>

<br>
<% for (let x of i){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <% if(x.images.length){ %>
                <img class="img-fluid" alt="" src="<%=x.images[0].url%>" height="350">
            <% }else{ %>
                <img src="https://res.cloudinary.com/coneaholic/image/upload/v1658083632/coneaholic/q9bf1zzqtowzdbxtolwp.jpg" class="img-fluid" alt="">
            <% } %>   
            
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title"><%= x.title %> </h3>
                <p class="card-text"><h5><%= x.description %></h5></p>
                <p class="card-text">
                    <small class="text-muted"><%= x.location%></small>
                </p>
                <a class="btn btn-primary" href="/icecreams/<%=x.id%>">View <%=x.title%></a>
            </div>
        </div>
    </div>
</div>
<br>
<% }%>

<script>
    const mapToken ='<%-process.env.MAPBOX_TOKEN%>';
    const icecream = {features:<%- JSON.stringify(i)%>};
</script>

<script src="/javascript/clustermap.js"></script>